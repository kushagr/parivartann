<%= form_for(@donation) do |f| %>
  <% if @donation.errors.any? %>
    <div id="error_fields">
      <h2><%= pluralize(@donation.errors.count, "errors") %> stopped us from taking your request.</h2>
      <ul>
        <% @donation.errors.full_messages do|msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="fields">
    <%= f.label :name %>
    <%= f.text_field :name %><br/>
  </div>

  <div class="field>">
    <%= f.label :city %>
    <%= f.text_field :city %><br/>
  </div>

  <div class="field>">
    <%= f.label :contact_no %>
    <%= f.text_field :contact_no %><br/>
  </div>

  <div class="field>">
    <%= f.label :email %>
    <%= f.text_field :email %><br/>
  </div>

  <div class="field">
    <%= f.check_box :books -%>
    <%= f.label :books %><br/>
    <%= f.check_box :clothes -%>
    <%= f.label :clothes %><br/>
    <%= f.check_box :celebrate -%>
    <%= f.label :celebrate %><br/>
    <%= f.label :others %>
    <%= f.text_field :others %>
  </div>
  <div class="actions">
    <%= f.submit  %>
  </div>
<% end %>
